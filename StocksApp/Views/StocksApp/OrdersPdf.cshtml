@model OrdersViewModel
@{
	Layout = null;
}
<link href=@("http://" + Context.Request.Host.ToString() + "/Css/TailwindOutput.css") rel="stylesheet" />

<div class="mt-8 relative overflow-x-auto">
	<h2 class="text-gray-800 text-lg font-semibold">Sell Orders</h2>
	<table class="text-gray-400 w-full text-left text-sm rtl:text-right">
		<thead class="bg-gray-700 text-gray-400 text-xs uppercase">
			<tr>
				<th scope="col" class="px-6 py-3">Order ID</th>
				<th scope="col" class="px-6 py-3">Stock Symbol</th>
				<th scope="col" class="px-6 py-3">Stock Name</th>
				<th scope="col" class="px-6 py-3">Date and Time of Order</th>
				<th scope="col" class="px-6 py-3">Quantity</th>
				<th scope="col" class="px-6 py-3">Price</th>
				<th scope="col" class="px-6 py-3">Trade Amount</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var sellOrder in Model.SellOrders)
			{
				<tr class="border-gray-700 bg-gray-800 border-b">
					<th scope="row" class="px-6 py-4 text-white whitespace-nowrap font-medium">
						@sellOrder.SellOrderID
					</th>
					<td class="px-6 py-4">
						@sellOrder.StockSymbol
					</td>
					<td class="px-6 py-4">
						@sellOrder.StockName
					</td>
					<td class="px-6 py-4">
						@sellOrder.DateAndTimeOfOrder
					</td>
					<td class="px-6 py-4">
						@sellOrder.Quantity
					</td>
					<td class="px-6 py-4">
						@sellOrder.Price
					</td>
					<td class="px-6 py-4">
						@sellOrder.TradeAmount
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>
<div class="mt-8 relative overflow-x-auto">
	<h2 class="text-gray-800 text-lg font-semibold">Buy Orders</h2>
	<table class="text-gray-400 w-full text-left text-sm rtl:text-right">
		<thead class="bg-gray-700 text-gray-400 text-xs uppercase">
			<tr>
				<th scope="col" class="px-6 py-3">Order ID</th>
				<th scope="col" class="px-6 py-3">Stock Symbol</th>
				<th scope="col" class="px-6 py-3">Stock Name</th>
				<th scope="col" class="px-6 py-3">Date and Time of Order</th>
				<th scope="col" class="px-6 py-3">Quantity</th>
				<th scope="col" class="px-6 py-3">Price</th>
				<th scope="col" class="px-6 py-3">Trade Amount</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var buyOrder in Model.BuyOrders)
			{
				<tr class="border-gray-700 bg-gray-800 border-b">
					<th scope="row" class="px-6 py-4 text-white whitespace-nowrap font-medium">
						@buyOrder.BuyOrderID
					</th>
					<td class="px-6 py-4">
						@buyOrder.StockSymbol
					</td>
					<td class="px-6 py-4">
						@buyOrder.StockName
					</td>
					<td class="px-6 py-4">
						@buyOrder.DateAndTimeOfOrder
					</td>
					<td class="px-6 py-4">
						@buyOrder.Quantity
					</td>
					<td class="px-6 py-4">
						@buyOrder.Price
					</td>
					<td class="px-6 py-4">
						@buyOrder.TradeAmount
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>






