@model StockDetailsViewModel

<a  class="block max-w-sm rounded-lg border border-gray-200 bg-white p-6 shadow dark:bg-gray-800 dark:border-gray-700">
	<i class="fa-solid fa-money-bill-trend-up fa-bounce fa-2xl" style="color: #ffffff;"> Stocks</i>
	<h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">@Model.StockName (@Model.StockSymbol)</h5>
	<p class="font-normal text-gray-700 dark:text-gray-400">@Model.StockPrice.ToString("N")</p>
</a>


<input type="hidden" id="StockSymbol" value="@Model.StockSymbol" />
<input type="hidden" id="FinnhubToken" value="@ViewBag.Token" />
@section Scripts {
	<script src="/Scripts/GetStockDetailsScript.js"></script>
}
