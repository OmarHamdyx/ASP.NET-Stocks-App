@model CompanyAndStockDetails
@{
	ViewBag.Title = Model.StockSymbol;
}
<div class="mt-72 font-bold">
	<ul class="flex text-3xl">
		<li class="mr-6">
			<a asp-controller="StocksApp" asp-action="GetStockDetails" class="text-gray-800 hover:text-blue-800 dark:text-white">Trade</a>
		</li>
		<li class="mr-6">
			<a asp-controller="StocksApp" asp-action="GetOrders" class="text-gray-800 hover:text-blue-800 dark:text-white">Orders</a>
		</li>
		<li class="mr-6">
			<a asp-controller="StocksApp" asp-action="GetExplorePage" class="text-gray-800 underline underline-offset-4 hover:text-blue-800 dark:text-white">Explore</a>
		</li>
	</ul>
</div>
<div class="my-5 text-gray-600 text-2xl dark:text-white">Stocks <span class="text-3xl">▸ </span>Explore</div>

<div class="flex">
	<div class="w-[30rem] border-gray-500 bg-white p-6 block rounded-lg border shadow dark:bg-gray-800 dark:border-gray-700">
		<p class="text-gray-500 font-bold">Stocks</p>

		@for (int i = 0; i < Model.CompanyOptions.CompanySymbols.Count; i++)
		{
			<div class="text-lg font-bold dark:text-white">@Model.CompanyOptions.CompanyNames[i]</div>
			<a href="/StocksApp/GetCompanyAndStockDetailsInExplore/@Model.CompanyOptions.CompanySymbols[i]" class="pb-5 text-gray-500 underline-offset-4 hover:underline">(@Model.CompanyOptions.CompanySymbols[i])</a>
		}
	</div>
	<div class="ml-[10rem]">
		<div class ="mb-5">
			<img class="h-40 w-40" src="@Model.ImgUrl" alt="Company Logo"/>
		</div>
		<h5 class="mb-5 text-gray-900 text-3xl font-bold tracking-tight dark:text-white">@Model.StockName (@Model.StockSymbol)</h5>
		<div class="mb-5 bg-gray-500 text-white p-1 inline-block rounded font-bold">@Model.FinnhubIndustry</div>
		<div class="mb-5"><span class="font-bold">Exchange : </span><span class="bg-gray-500 p-1 text-white inline-block rounded font-bold">@Model.Exchange</span></div>
		<div class="mb-5 text-gray-700 text-7xl font-bold dark:text-white">$<span class="price">@Model.Price.Value.ToString("N")</span></div>
		<div class="mt-3 border-gray-800 bg-gray-100 px-4 py-2 text-gray-800 inline-block rounded border text-3xl font-bold hover:bg-gray-800 hover:text-white dark:text-white dark:bg-gray-800 dark:hover:text-gray-800 dark:hover:bg-gray-100">
			<a href="/StocksApp/GetStockDetails/@Model.StockSymbol">Trade</a>
		</div>
	</div>
</div> 
@section Scripts {
	<script src="/Scripts/GetStockDetailsScript.js"></script>
}
