@model CompanyAndStockDetails
<div class="mb-5">
    <img class="h-40 w-40" src="@Model.ImgUrl" alt="Company Logo" />
</div>
<h5 class="mb-5 text-3xl font-bold tracking-tight text-gray-900 dark:text-white">@Model.CompanyName (@Model.StockSymbol)</h5>
<div class="mb-5 inline-block rounded bg-gray-500 p-1 font-bold text-white">@Model.FinnhubIndustry</div>
<div class="mb-5"><span class="font-bold">Exchange : </span><span class="inline-block rounded bg-gray-500 p-1 font-bold text-white">@Model.Exchange</span></div>
@if (Model.Price is not null)
{
    <div class="mb-5 text-7xl font-bold text-gray-700 dark:text-white">$<span class="price">@Model.Price.Value.ToString("N")</span></div>
}
<div class="mt-3 inline-block rounded border border-gray-800 bg-gray-100 px-4 py-2 text-3xl font-bold text-gray-800 hover:bg-gray-800 hover:text-white dark:text-white dark:bg-gray-800 dark:hover:text-gray-800 dark:hover:bg-gray-100">
    <a asp-controller="StocksApp" asp-action="GetStockDetails" asp-route-stocksymbol="@Model.StockSymbol">Trade</a>
</div>